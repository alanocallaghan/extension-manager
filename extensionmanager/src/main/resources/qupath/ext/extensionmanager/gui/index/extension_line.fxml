<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<fx:root alignment="CENTER_LEFT" spacing="5.0" type="HBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <Label fx:id="name" />
   <Region HBox.hgrow="ALWAYS" />
   <Button fx:id="add" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onAddClicked">
      <tooltip>
         <Tooltip text="%Index.ExtensionLine.installExtension" />
      </tooltip></Button>
   <Button fx:id="settings" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" onAction="#onSettingsClicked">
      <tooltip>
         <Tooltip text="%Index.ExtensionLine.updateExtension" />
      </tooltip></Button>
   <Button fx:id="delete" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDeleteClicked">
      <tooltip>
         <Tooltip text="%Index.ExtensionLine.removeExtension" />
      </tooltip></Button>
   <Button fx:id="info" contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onInfoClicked">
      <tooltip>
         <Tooltip text="%Index.ExtensionLine.getInformation" />
      </tooltip></Button>
</fx:root>
