<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root height="400.0" title="Extension Manager" type="Stage" width="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <VBox>
              <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                  <VBox fx:id="indexes" />
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
              </ScrollPane>


                <HBox>
                    <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                            onAction="#onOpenExtensionDirectory" text="Open extension directory" HBox.hgrow="ALWAYS"/>
                    <Button layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                            onAction="#onManageIndexesClicked" text="Manage extension indexes" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
        </Scene>
    </scene>
</fx:root>
