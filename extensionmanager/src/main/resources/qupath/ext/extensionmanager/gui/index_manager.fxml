<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root height="300.0" title="%IndexManager.title" type="Stage" width="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <VBox>
                <TableView fx:id="indexTable" VBox.vgrow="ALWAYS">
                    <placeholder>
                        <Label text="%IndexManager.noIndexAdded" />
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="nameColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="100.0" text="%IndexManager.name" />
                        <TableColumn fx:id="urlColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="300.0" text="%IndexManager.url" />
                        <TableColumn fx:id="descriptionColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="${indexTable.width-nameColumn.Width-urlColumn.width-2}" text="%IndexManager.description" />
                    </columns>
                </TableView>
                <HBox spacing="5.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                    <TextField fx:id="indexURL" promptText="%IndexManager.indexUrl" HBox.hgrow="ALWAYS">
                  <tooltip>
                     <Tooltip text="%IndexManager.urlPointingToGitHubRepository" />
                  </tooltip></TextField>
                    <Button mnemonicParsing="false" onAction="#onAddClicked" text="%IndexManager.add">
                  <tooltip>
                     <Tooltip text="%IndexManager.addProvidedUrl" />
                  </tooltip></Button>
                </HBox>
            </VBox>
        </Scene>
    </scene>
</fx:root>
